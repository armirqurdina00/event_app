  "scripts": {
    "oaslint": "spectral dotenv -elint ../oas/*",
    "lint": "eslint --ext .js,.ts src --fix",
    "clean": "rm -rf node_modules && rm -rf build && rm -rf .nyc_output && rm -rf coverage && rm -rf src/helpers-for-tests/backend_client",
    "build": "npx tsoa spec-and-routes && npx openapi-typescript-codegen --client axios --input ../backend/build/swagger.json --output src/helpers-for-tests/backend_client --name BackendClient && tsc",
    "test": "tsoa spec-and-routes && npx openapi-typescript-codegen --client axios --input ../backend/build/swagger.json --output src/helpers-for-tests/backend_client --name BackendClient && mocha -r ts-node/register src/tests/*Tests.ts --exit --bail",
    "coverage": "nyc npm run test",
    "dev": "dotenv -e .env/.dev_env npx nodemon",
    "tmp": "dotenv -e .env/.dev_env ts-node src/tmp.ts",
    "start": "node build/src/index.js"
  },
  "author": "Magnus GÃ¶dde",
  "license": "No licence",
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "bail": true,
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testEnvironment": "node",
    "collectCoverage": true,
    "testPathIgnorePatterns": [
      "common.ts"
    ]
  }
}
